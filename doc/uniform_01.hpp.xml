# include &lt;cstdlib&gt;

namespace CppAD {
	inline void uniform_01(size_t seed)
	{	std::srand( (unsigned int) seed); }

	template &lt;class Vector&gt;
	void uniform_01(size_t n, Vector &amp;x)
	{	static double factor = 1. / double(RAND_MAX);
		while(n--)
			x[n] = std::rand() * factor;
	}
}</pre>

# endif
